VertexLitGeneric
{
	"$basetexture" "models\workshop\player\items\spy\firesuit\firesuit"
	"$basemapalphaphongmask"	"1"
	
	"$detail" "effects/tiledfire/fireLayeredSlowTiled512.vtf"	
	"$detailscale" "0.01"
	"$detailblendfactor" 0.05
	"$detailblendmode" 6
	
	"$yellow" "0"
	"$one" "1"
	
	"$blendtintbybasealpha" "1" 
	"$blendtintcoloroverbase" "1"  
	
	"$color2" "{77 33 29}"

	// Rim lighting parameters
	"$rimlight" "1"												// To enable rim lighting (requires phong)
	"$rimlightexponent" "2"										// Exponent for phong component of rim lighting	
	"$rimlightboost" "0.5"										// Boost for ambient cube component of rim lighting

	"$halflambert" "1"
	"$phong" "1"
	"$phongexponent" "20"
	"$phongboost" ".20"	
	"$phongfresnelranges"	"[1 5 10]"


	// Cloaking
	"$cloakPassEnabled" "1"

	"360?$color2" "[ 0.7 0.7 0.7 ]"

	"Proxies"
	{
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
		"BurnLevel"
		{
			"resultVar" "$detailblendfactor"
		}
		"ItemTintColor"
		{
			"resultVar" "$colortint_tmp"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	}
}